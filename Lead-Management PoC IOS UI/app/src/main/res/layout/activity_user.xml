<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User's Information"
            android:background="@color/design_default_color_error"
            android:textColor="@color/cardview_light_background"
            android:textAlignment="center"
            android:layout_margin="3dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/grid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp">
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/user_attributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Household Size"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated Income"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Neighbourhood"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scocioeconomic Status"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kids"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pets"
                    android:textAlignment="center"
                    android:background="@drawable/border"/>

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/user_attributes_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 to 35"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150-175 K"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High Income"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prof Services"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textAlignment="textEnd"
                    android:background="@drawable/border"
                    android:paddingRight="5dp"/>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/considerations_and_features_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/considerations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key considerations"
                    android:background="@color/design_default_color_error"
                    android:textColor="@color/cardview_light_background"
                    android:textAlignment="center"
                    android:layout_margin="3dp"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/considerations_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/considerations_details_attributes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Search Period"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open House"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Other Apps"/>

                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/considerations_details_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexDirection="column">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6 Month"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Redfn"
                            android:textAlignment="center"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fearures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:flexDirection="column">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:background="@color/design_default_color_error"
                    android:textColor="@color/cardview_light_background"
                    android:textAlignment="center"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/features_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexDirection="column"
                    android:layout_marginHorizontal="3dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/feature_details_attributes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bakary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Car Park"
                            android:textAlignment="center"
                            app:layout_alignSelf="center"/>

                    </com.google.android.flexbox.FlexboxLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/features_details_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bakary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rec areas"
                            android:textAlignment="center"
                            app:layout_alignSelf="center"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Recommendations"
                android:background="@color/design_default_color_error"
                android:textColor="@color/cardview_light_background"
                android:textAlignment="center"
                android:layout_margin="3dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/recommendations_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/recommendation_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    android:background="@drawable/border"
                    android:layout_margin="3dp"
                    android:paddingLeft="3dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_home_black_24dp"/>
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexDirection="column">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$340,000"
                                android:textAlignment="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2036 Sq. FT"
                                android:textAlignment="center"/>
                        </com.google.android.flexbox.FlexboxLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4133 EVilla Linda Dr"/>
                </com.google.android.flexbox.FlexboxLayout>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/recommendation_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    android:background="@drawable/border"
                    android:layout_margin="3dp"
                    android:paddingLeft="3dp">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_home_black_24dp"/>
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexDirection="column">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$380,000"
                                android:textAlignment="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2084 Sq. FT"
                                android:textAlignment="center"/>
                        </com.google.android.flexbox.FlexboxLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4145 W Villa Linda Dr"/>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>